{
  "version": "0.3.10",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/use-idb-keyval.cjs",
    "default": "./dist/use-idb-keyval.modern.js"
  },
  "module": "./dist/use-idb-keyval.module.js",
  "unpkg": "./dist/use-idb-keyval.umd.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.ts": "npx --no prettier --write"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "use-idb-keyval",
  "author": "Brandon Pittman",
  "size-limit": [
    {
      "path": "dist/use-idb-keyval.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-idb-keyval.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "microbundle": "^0.14.2",
    "nano-staged": "^0.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "simple-git-hooks": "^2.7.0",
    "size-limit": "^5.0.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
